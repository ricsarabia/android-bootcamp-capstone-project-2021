<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.detail.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/majorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="major"
            android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/arrowLabel"/>
        <TextView
            android:id="@+id/arrowLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†’"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/majorTextView"
            app:layout_constraintRight_toLeftOf="@id/minorTextView"/>
        <TextView
            android:id="@+id/minorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="minor"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/arrowLabel"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICES"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lastLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/higherLabel"
                app:layout_constraintTop_toBottomOf="@id/priceLabel" />

            <TextView
                android:id="@+id/higherLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGHER"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@id/lastLabel"
                app:layout_constraintRight_toLeftOf="@id/lowerLabel"
                app:layout_constraintTop_toBottomOf="@id/priceLabel" />

            <TextView
                android:id="@+id/lowerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOWER"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@id/higherLabel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/priceLabel" />

            <TextView
                android:id="@+id/lastPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                app:layout_constraintLeft_toLeftOf="@id/lastLabel"
                app:layout_constraintRight_toRightOf="@id/lastLabel"
                app:layout_constraintTop_toBottomOf="@id/lastLabel" />

            <TextView
                android:id="@+id/higherPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                app:layout_constraintLeft_toLeftOf="@id/higherLabel"
                app:layout_constraintRight_toRightOf="@id/higherLabel"
                app:layout_constraintTop_toBottomOf="@id/higherLabel" />

            <TextView
                android:id="@+id/lowerPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                app:layout_constraintLeft_toLeftOf="@id/lowerLabel"
                app:layout_constraintRight_toRightOf="@id/lowerLabel"
                app:layout_constraintTop_toBottomOf="@id/lowerLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ASKS"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/asksLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BIDS" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bidsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>